<!DOCTYPE html>
<html lang="es">
    <head>
        <%-include ("../partials/head") %>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    </head>
    <body class="detailBody">
        <header><%-include("../partials/header")%></header>
        <main class="main-detail">
            <!-- <section class="logo-login"> 
                <img src="/images/logo-nobg.png" alt="logo">
                </section> -->

            <div class="flex">
                <section class="product-detail container-xxl login-register">
                    <div class="img-container" style="padding: 1%">
                        <h2 id="tourName"><%= tour.name %></h2>
                        <div class="img-card-detail">
                            <img
                                src="/images/productsImages/<%= tour.image %>"
                                alt="<%= tour.city %> " />
                        </div>
                        <div class="product-description div">
                            <h3 style="width: 90%"><%= tour.description %></h3>
                        </div>

                        <div class="flexPd">
                            <div class="product-price div inPd">
                                <h3>
                                    $ <%= tour.price * (100 - tour.discount)
                                    /100 %>.- ARS
                                </h3>
                            </div>
                            <div class="product-price div inPd">
                                <h3><%= tour.discount %>% OFF</h3>
                            </div>
                        </div>

                        <div class="button-container div">
                            <a href="#toHere">
                                <button
                                    type="submit"
                                    class="addButton buttonProductOption buttonProductOptionColor buttonProductHover">
                                    Comprar
                                </button>
                            </a>
                        </div>
                    </div>
                </section>
                <div class="row-test opinions login-register">
                    <div class="col-test">
                        <span class="heading">Opiniones del tour</span>
                        <div class="fiveStars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <p>4.1 promedio basado en 254 opiniones</p>
                        <div class="row-test">
                            <div class="side">
                                <div>5 Estrellas</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-5"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>150</div>
                            </div>
                            <div class="side">
                                <div>4 Estrellas</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-4"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>63</div>
                            </div>
                            <div class="side">
                                <div>3 Estrellas</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-3"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>15</div>
                            </div>
                            <div class="side">
                                <div>2 Estrellas</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-2"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>6</div>
                            </div>
                            <div class="side">
                                <div>1 Estrella</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-1"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>2</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="testimonials">
                <div class="inner-test">
                    <div class="row-test">
                        <div class="col-test">
                            <div class="testimonial-test">
                                <img src="/images/p3.png" alt="" />
                                <div class="name-test">Luciana</div>
                                <div class="stars">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                                <p></p>
                                <p>Lo que más me gustó fué la predisposición del guía. La actividad superó mis expectativas. Lo super recomiendo!!</p>  
                            </div>
                        </div>
                        <div class="col-test">
                            <div class="testimonial-test">
                                <img src="/images/p2.png" alt="" />
                                <div class="name-test">Roberta</div>
                                <div class="stars-test">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                </div>
                                <p>Es un viaje con una historia muy enriquecedora. Disfrutamos de bebidas muy ricas y a un gran precio. Una experiencia inolvidable.</p>
                            </div>
                        </div>
                        <div class="col-test">
                            <div class="testimonial-test">
                                <img src="/images/p1.png" alt="" />
                                <div class="name-test">Lionel</div>
                                <div class="stars-test">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                </div>
                                <p>
                                    Es maravilloso, no hay forma de describir tanta belleza, cuando estas en camino, ya te quedas con la boca abierta, imagínate estar a metros.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h2 class="font-heading">Tours similares</h2>
                </div>
            </div>
            <div class="container">
                <div
                    class="row row-cols-1 row-cols-sm-1 row-cols-lg-3 row-cols-xl-3 g-2 g-lg-3">
                    <% otrosTours.forEach(tour => { %>
                    <div class="col">
                        <div class="p-3 coolEfect border bg-light">
                            <article>
                                <div class="img-card">
                                    <img
                                        width="100%"
                                        src="/images/productsImages/<%=tour.image %>"
                                        alt="<%=tour.city %>" />
                                </div>
                                <p id="toHere" class="text-card">
                                    <%=tour.description %>
                                </p>
                            </article>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </main>

        <div id="addedToCart">
            <div class="confirmCard">
                <h3 style="margin-bottom: 21px">Confirma tu compra</h3>
                <div class="flex">
                    <div>
                        <img
                            class="confirmImg"
                            src="/images/productsImages/<%=tour.image %>"
                            alt="<%=tour.city %>" />
                    </div>
                    <div class="confirmInfo">
                        <div>
                            <h4><%= tour.name %></h4>
                            <h5>por <%= tour.continent%></h5>
                        </div>
                        <div class="peopleQuantity">
                            <label for="">Cantidad de personas</label>
                            <select
                                id="selectPeople"
                                type="number"
                                class="form-control"
                                name=""
                                id="">
                                <option value="1">1</option>
                                <option value="2" selected>2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <div class="finalPrice">
                            <p>Precio final:</p>
                            <p>
                                $ <%= tour.price * (100 - tour.discount) /100
                                %>.- ARS
                            </p>
                        </div>

                        <button
                            margin="2%"
                            id="deleteItem"
                            type="button"
                            class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove"></span>
                            Cancelar
                        </button>
                        <button
                            id="confirmItem"
                            margin="2%"
                            type="button"
                            class="btn btn-success">
                            Confirmar compra
                            <span class="glyphicon glyphicon-play"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <footer><%-include ("../partials/footer") %></footer>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
            crossorigin="anonymous"></script>
        <script src="../js/addToCart.js"></script>
    </body>
</html>
