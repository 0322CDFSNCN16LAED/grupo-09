<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include ("../partials/head") %>
        <script src="/js/validationUser.js"></script>
    </head>
    <body class="loginBody">
        <header><%-include ("../partials/header") %></header>
        <main>
            <div class="container-xxl login-register">
                <div class="row">
                    <div class="col login-logo">
                        <img src="/images/logo-nobg.png" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <section class="form-register">
                            <div class="errors">
                                <ul></ul>
                            </div>
                            <h5>Registrate:</h5>
                            <form
                                method="POST"
                                id="formulario"
                                action="/users/register"
                                enctype="multipart/form-data"
                                class="userRegister">
                                <div>
                                    <input
                                        class="input-login email"
                                        type="email"
                                        name="email"
                                        placeholder="Ingresa tu email"
                                        value="<%= locals.old && old.email %>" />
                                    <span class="error"></span>
                                    <% if (locals.errors && errors.email) { %>
                                    <p style="color: white">
                                        <%= errors.email.msg %>
                                    </p>
                                    <% } %>
                                </div>
                                <div>
                                    <input
                                        class="input-login name"
                                        type="text"
                                        name="name"
                                        placeholder="Ingresa tu nombre y apellido"
                                        value="<%= locals.old && old.name %>" />
                                    <span class="error"></span>
                                    <% if (locals.errors && errors.name) { %>
                                    <p style="color: white">
                                        <%= errors.name.msg %>
                                    </p>
                                    <% } %>
                                </div>
                                <div>
                                    <input
                                        class="input-login phoneNumber"
                                        type="number"
                                        name="phoneNumber"
                                        placeholder="Ingresa tu número de celular"
                                        value="<%= locals.old && old.phoneNumber %>" />
                                    <span class="error"></span>
                                    <% if (locals.errors && errors.phoneNumber)
                                    { %>
                                    <p style="color: white">
                                        <%= errors.phoneNumber.msg %>
                                    </p>
                                    <% } %>
                                </div>
                                <div>
                                    <input
                                        class="input-login password"
                                        type="password"
                                        name="password"
                                        placeholder="Contraseña" />
                                    <span class="error"></span>
                                    <% if (locals.errors && errors.password) {
                                    %>
                                    <p style="color: white">
                                        <%= errors.password.msg %>
                                    </p>
                                    <% } %>
                                </div>
                                <div>
                                    <input
                                        class="input-login rePassword"
                                        type="password"
                                        name="rePassword"
                                        placeholder="Repetir Contraseña" />
                                    <span class="error"></span>
                                    <% if (locals.errors && errors.rePassword) {
                                    %>
                                    <p style="color: white">
                                        <%= errors.rePassword.msg %>
                                    </p>
                                    <% } %>
                                </div>
                                <input
                                    class="input-login avatar"
                                    type="file"
                                    name="avatar" />
                                <% if (locals.errors && errors.avatar) { %>
                                <p style="color: white">
                                    <%= errors.avatar.msg %>
                                </p>
                                <% } %>
                                <input
                                    class="btn-login"
                                    type="submit"
                                    value="Registrarme" />
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </main>
        <footer><%-include ("../partials/header") %></footer>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
            crossorigin="anonymous"></script>
    </body>
</html>
